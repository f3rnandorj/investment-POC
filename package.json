{
  "name": "investo-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/f3rnandorj/investo-challenge",
  "author": "FERNANDO HENRIQUE FERNANDES DA SILVA <f3rnandorj10@gmail.com>",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "start:prod": "node build/server.js",
    "build": "tsup src --out-dir build",
    "start:backend": "chmod +x src/scripts/start.sh && src/scripts/start.sh",
    "docker:start": "docker compose up --build -d",
    "docker:stop": "docker compose stop",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "seeds": "ts-node src/scripts/importData.ts",

    "test:coverage": "vitest run --coverage --config vitest.coverage.config.mts",
    "pretest:coverage": "run-s test:create-prisma-environment test:install-prisma-environment",

    "test": "vitest run --config vitest.config.mts",

    "test:e2e": "vitest run --config vitest.e2e.config.mts",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@types/node": "22.13.5",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "3.0.7",
    "eslint": "9.21.0",
    "globals": "16.0.0",
    "npm-run-all": "4.1.5",
    "prisma": "6.4.1",
    "supertest": "7.0.0",
    "ts-node": "10.9.2",
    "tsup": "8.3.6",
    "tsx": "4.19.3",
    "typescript": "5.7.3",
    "typescript-eslint": "8.25.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.7"
  },
  "dependencies": {
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.2",
    "@prisma/client": "6.4.1",
    "csv-parser": "3.2.0",
    "date-fns": "4.1.0",
    "dotenv": "16.4.7",
    "fastify": "5.2.1",
    "is-business-day": "1.0.1",
    "mongodb": "6.13.1",
    "xlsx": "0.18.5",
    "zod": "3.24.2"
  }
}
